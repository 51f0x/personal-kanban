{
  "manifest_version": 3,
  "name": "Personal Kanban Capture",
  "version": "0.1.0",
  "description": "Send the current tab to your self-hosted Personal Kanban input queue.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["http://localhost:3000/*"],
  "action": {
    "default_title": "Capture to Personal Kanban"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
