{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "experimental": {
            "keepImportAssertions": true
        },
        "target": "es2021",
        "baseUrl": ".",
        "paths": {
            "@personal-kanban/shared": [
                "packages/shared/src"
            ],
            "@personal-kanban/shared/*": [
                "packages/shared/src/*"
            ]
        }
    },
    "module": {
        "type": "commonjs",
        "strict": false,
        "strictMode": true,
        "lazy": false,
        "noInterop": false
    },
    "sourceMaps": true,
    "minify": false
}