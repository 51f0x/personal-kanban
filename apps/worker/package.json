{
    "name": "@personal-kanban/worker",
    "version": "0.1.0",
    "private": true,
    "main": "dist/main.js",
    "scripts": {
        "prebuild": "pnpm --filter @personal-kanban/shared build",
        "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/main.js",
        "lint": "biome check src",
        "lint:fix": "biome check --write src",
        "test": "jest",
        "test:agents": "ts-node-dev --transpile-only src/test-agents.ts",
        "queue:send": "ts-node-dev --transpile-only src/send-task-to-queue.ts",
        "db:generate": "dotenv -e .env -- prisma generate --schema=./prisma/schema.prisma",
        "db:migrate": "dotenv -e .env -- prisma migrate dev --schema=./prisma/schema.prisma",
        "db:migrate:deploy": "dotenv -e .env -- prisma migrate deploy --schema=./prisma/schema.prisma",
        "db:reset": "dotenv -e .env -- prisma migrate reset --force --schema=./prisma/schema.prisma",
        "db:studio": "dotenv -e .env -- prisma studio --schema=./prisma/schema.prisma"
    },
    "dependencies": {
        "@mozilla/readability": "^0.6.0",
        "@nestjs/bullmq": "^11.0.4",
        "@nestjs/common": "^11.1.9",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.9",
        "@personal-kanban/shared": "workspace:*",
        "@prisma/adapter-pg": "^6.19.1",
        "@prisma/client": "^6.19.1",
        "@types/jsdom": "^27.0.0",
        "@types/nodemailer": "^7.0.4",
        "axios": "^1.13.2",
        "bullmq": "^5.65.0",
        "imapflow": "^1.0.164",
        "ioredis": "^5.8.2",
        "joi": "^17.13.3",
        "jsdom": "^27.3.0",
        "marked": "^17.0.1",
        "nodemailer": "^7.0.11",
        "openai": "^5.7.0",
        "ollama": "^0.6.3",
        "pg": "^8.16.3",
        "playwright": "^1.48.2",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.30",
        "dotenv-cli": "^7.4.2",
        "jest": "^29.7.0",
        "prisma": "^6.14.0",
        "ts-jest": "^29.1.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.4.5"
    }
}