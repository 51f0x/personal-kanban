{
    "name": "personal-kanban",
    "version": "0.1.0",
    "private": true,
    "packageManager": "pnpm@9.11.0",
    "scripts": {
        "dev": "pnpm -r --parallel run dev",
        "build": "pnpm -r run build",
        "test": "pnpm -r run test",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "db:generate": "pnpm --filter @personal-kanban/api db:generate && pnpm --filter @personal-kanban/worker db:generate",
        "db:migrate": "pnpm --filter @personal-kanban/api db:migrate",
        "db:migrate:worker": "pnpm --filter @personal-kanban/worker db:migrate",
        "db:migrate:deploy": "pnpm --filter @personal-kanban/api db:migrate:deploy && pnpm --filter @personal-kanban/worker db:migrate:deploy",
        "db:seed": "pnpm --filter @personal-kanban/api db:seed",
        "db:reset": "pnpm --filter @personal-kanban/api db:reset",
        "db:studio": "pnpm --filter @personal-kanban/api db:studio"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.7",
        "@swc/cli": "^0.7.8",
        "@swc/core": "^1.13.5",
        "@types/node": "^24.3.0",
        "dotenv-cli": "^7.4.2",
        "prisma": "^6.14.0",
        "source-map-support": "^0.5.21",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@prisma/client": "6.19.1"
    }
}
