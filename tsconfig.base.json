{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "@personal-kanban/shared": ["packages/shared/src"],
            "@personal-kanban/shared/*": ["packages/shared/src/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
